{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2017",
		"lib": ["ES6"],
		"moduleResolution": "node",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowUnreachableCode": false,
		"noUnusedLocals": true
	},
	"include": ["src/**/*"]
}